<section class="content home">
  <header>
    <h1 class="entry-title"><%= user['name'] %>'s Gists</h1>
  </header>
  <div class="user-gist-list">

    <ul>
    <% user['gists'].each do |gist| %>
      <li><a href="/<%= gist['id'] %>"><%#= gist['id'] %> <%=
        if gist['description'].empty?
          gist['id']
        else
          gist['description']
        end
      %></a></li>
    <% end %>
    </ul>
  </div>
</section>